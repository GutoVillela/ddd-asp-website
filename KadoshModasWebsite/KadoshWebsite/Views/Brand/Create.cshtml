@model BrandViewModel
@{
    ViewData["Title"] = "Cadastrar uma nova marca";
}

<h1>Cadastrar uma nova loja</h1>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" method="post" class="row">
            <div class="col-12 mb-3">
                <div class="input-group flex-nowrap">
                    <span class="input-group-text" id="addon-wrapping"><i class="uil uil-ticket icon-size-1-5"></i></span>
                    <div class="form-floating w-100">
                        <input asp-for="Name" class="form-control" placeholder="Nome da marca" />
                        <label asp-for="Name"></label>
                    </div>
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <a class="btn btn-danger" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}