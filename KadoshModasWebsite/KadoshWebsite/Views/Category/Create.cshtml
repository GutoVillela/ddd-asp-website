@model CategoryViewModel
@{
    ViewData["Title"] = "Cadastrar uma nova categoria";
}

<!-- START: Breadcrumbs-->
<div class="row">
    <div class="col-12  align-self-center">
        <div class="sub-header mt-3 py-3 align-self-center d-sm-flex w-100 rounded">
            <div class="w-sm-100 me-auto"><h4 class="mb-0">@ViewData["Title"]</h4> <p>Sistema de administração da Kadosh Modas</p></div>

            <ol class="breadcrumb bg-transparent align-self-center m-0 p-0">
                <li class="breadcrumb-item"><a asp-area="" asp-controller="Category" asp-action="Index">Categorias</a></li>
                <li class="breadcrumb-item active">Cadastrar</li>
            </ol>
        </div>
    </div>
</div>
<!-- END: Breadcrumbs-->

<div class="col-md-12 mb-3">
    <div class="card">
        <div class="card-header">
            <i class="uil uil-layer-group icon-size-1-5"></i> Informações da nova categoria
        </div>
        <div class="card-body row">
            <div class="col-md-12">
                <form asp-action="Create" method="post" class="row">
                    <div class="col-12 mb-3">
                        <div class="input-group flex-nowrap">
                            <span class="input-group-text" id="addon-wrapping"><i class="uil uil-layer-group icon-size-1-5"></i></span>
                            <div class="form-floating w-100">
                                <input asp-for="Name" class="form-control" placeholder="Nome da categoria" />
                                <label asp-for="Name"></label>
                            </div>
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-12">
                        <input type="submit" value="Cadastrar" class="btn btn-primary" />
                        <a class="btn btn-danger" asp-action="Index">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}