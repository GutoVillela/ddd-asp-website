@model CategoryViewModel
@{
    ViewData["Title"] = $"Tem certeza que deseja apagar a categoria: {Model.Name}?";
}

<div class="row">
    <div class="col-12">
        <div class="alert alert-danger" role="alert">
            Atenção! Esta ação não poderá ser desfeita!
        </div>
    </div>
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3>Tem certeza que deseja apagar a categoria: @Model.Name?</h3>
            </div>
            <div class="card-body">
                <form asp-action="Delete" method="post" class="row">
                    <input asp-for="Id" type="hidden" />
                    <div class="col-12 mb-3">
                        <div class="input-group flex-nowrap">
                            <span class="input-group-text" id="addon-wrapping"><i class="uil uil-layer-group icon-size-1-5"></i></span>
                            <div class="form-floating w-100">
                                <input asp-for="Name" class="form-control" placeholder="Nome da categoria" readonly />
                                <label asp-for="Name"></label>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-12">
                        <input type="submit" value="Apagar categoria" class="btn btn-danger" />
                        <a class="btn btn-light" asp-action="Index">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
