@model CustomerViewModel
@{
    ViewData["Title"] = $"Tem certeza que deseja apagar o cliente: {Model.Name}?";
}

<div class="col-md-12 mb-3">
    <div class="card">
        <div class="card-header">
            <i class="uil uil-ticket icon-size-1-5"></i> Informações da nova marca
        </div>
        <div class="card-body row">
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="alert alert-danger" role="alert">
            Atenção! Esta ação não poderá ser desfeita!
        </div>
    </div>
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3>Tem certeza que deseja apagar o cliente: @Model.Name?</h3>
            </div>
            <div class="card-body">
                <form asp-action="Delete" method="post" class="row">
                    <input asp-for="Id" type="hidden" />
                    <div class="col-md-12">
                        @Html.DisplayFor(m => m.Name)
                    </div>
                    <div class="col-md-12">
                        <input type="submit" value="Apagar cliente" class="btn btn-danger" />
                        <a class="btn btn-light" asp-action="Index">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>