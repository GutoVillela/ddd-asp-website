@model IEnumerable<SaleViewModel>
@{
    ViewData["Title"] = "Cadastro de vendas";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-12 mb-3">
            <a class="btn btn-success  float-end" asp-action="Create" title="Cadastrar um novo produto no sistema">Nova venda <i class="uil uil-plus"></i></a>
        </div>
        <div class="col-md-12">
            @{
                await Html.RenderPartialAsync("_CheckForAlert");
            }
            <table class="table table-bordered table-striped table-hover table-responsive">
                <caption>Listando @Model.Count() vendas</caption>
                <thead>
                    <tr class="table-primary">
                        <th>Cliente</th>
                        <th>Data</th>
                        <th>Valor</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if(Model is null || !Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center">Nenhuma venda cadastrada</td>
                        </tr>
                    }
                    else
                    {
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>@item.CustomerName</td>
                                <td>@item.SaleDate!.Value.ToString("dd/MM/yyyy")</td>
                                <td>@item.SaleTotalFormatted</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary text-white" title="Editar venda">
                                        <i class="uil uil-edit-alt"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger text-white" title="Apagar venda">
                                        <i class="uil uil-times"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>